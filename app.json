{
  "expo": {
    "name": "Noura",
    "slug": "noura",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.noura"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.noura"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-quick-actions",
      "expo-secure-store",
      "expo-tracking-transparency",
      "expo-localization",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Noura to access your camera",
          "microphonePermission": "Allow Noura to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}